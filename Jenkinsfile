#!/usr/bin/env groovy

pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                script {
                    echo "Building the applications..."
                }
            }
        }
        stage('test') {
            steps {
                script {
                    echo "Testing the applications..."
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                }
            }
        }
    }
}
